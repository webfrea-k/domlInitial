                android:layout_width="match_parent"
                android:background="@color/lighter_gray"
                android:layout_height="match_parent" >
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/cardview1">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:id="@+id/editpersondesc"
            android:text="Here you can add your friends and family members. You will get notification if you or anyone from list below outlived any celebrity. Type name > Click Add > Type birthday and hit Save."
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview1"
        android:layout_margin="5dp"
        android:id="@+id/cardView">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/txtItemPerson"
                    android:layout_below="@id/cardview1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:hint="@string/hintTxtItem"
                    />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblBtnAdd"/>
            </TableRow>
